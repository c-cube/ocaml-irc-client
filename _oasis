BuildTools:   ocamlbuild
Plugins:      META (0.4), DevFiles (0.4)

Flag lwt
  Description: build the Lwt library
  Default: false

Flag tls
  Description: build the Lwt+TLS library
  Default: false

Flag unix
  Description: build the Unix library
  Default: false

Flag examples
  Description: build examples
  Default: false

Library irc_client
  Path: lib
  Findlibname: irc-client
  Modules: Irc_client, Irc_helpers, Irc_message, Irc_transport
  BuildDepends: bytes, result

Library irc_client_lwt
  Build$: flag(lwt)
  Path: lwt
  BuildDepends: irc-client, lwt, lwt.unix
  Findlibname: lwt
  Findlibparent: irc_client
  Modules: Irc_client_lwt

Library irc_client_lwt_tls
  Build$: flag(lwt) && flag(tls)
  Path: tls
  BuildDepends: irc-client, lwt, lwt.unix, threads, tls
  Findlibname: lwt_tls
  Findlibparent: irc_client
  ByteOpt: -bin-annot -thread
  NativeOpt: -bin-annot -thread
  Modules: Irc_client_lwt_tls

Library irc_client_unix
  Build$: flag(unix)
  Path: unix
  BuildDepends: irc-client
  Findlibname: unix
  Findlibparent: irc_client
  Modules: Irc_client_unix

Executable example1
  Build$: flag(lwt) && flag(examples)
  Path: examples
  MainIs: example1.ml
  Install: false
  BuildDepends: irc-client.lwt

Executable example2
  Build$: flag(lwt) && flag(examples)
  Path: examples
  MainIs: example2.ml
  Install: false
  BuildDepends: irc-client.lwt

Executable example3
  Build$: flag(lwt) && flag(tls) && flag(examples)
  Path:   examples
  MainIs: example3.ml
  Install: false
  BuildDepends: irc-client.lwt_tls

Executable test_main
  Build$: flag(tests)
  Path: test
  MainIs: test_main.ml
  Install: false
  BuildDepends: oUnit, irc-client

Test test_main
  Command: $test_main
  WorkingDirectory: test

AlphaFeatures: ocamlbuild_more_args
